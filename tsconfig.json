{
    "compilerOptions":
    {
	"module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
	"rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
	"noImplicitAny": false,
        "paths":
        {
            "*":
            [
                "node_modules/*"
            ]
        }
    },
    "include":
    [
        "src/**/*"
    ]
}
